<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Patient Pal"
            android:textColor="@color/navyblue"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/about_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At Patient Pal, we believe that quality care starts with understanding. Our mission is to connect families with trusted caregivers who can provide personalized support based on individual needs. Whether you require hourly assistance or specialized medical care, we are here to make the process seamless and efficient."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Mission Section -->
        <TextView
            android:id="@+id/mission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:textColor="@color/navyblue"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/mission_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To empower families by providing a reliable platform for finding qualified caregivers who are dedicated to enhancing the quality of life for their loved ones."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Team Section -->
        <TextView
            android:id="@+id/team_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet Our Team"
            android:textColor="@color/navyblue"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Team Member Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/member1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe, RN"
                    android:textColor="@color/navyblue"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/member1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chief Nursing Officer"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/member1_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With over 15 years of experience in nursing, Jane leads our team of caregivers, ensuring the highest level of care and professionalism."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/member2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="@color/navyblue"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/member2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Care Coordinator"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/member2_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John is dedicated to matching families with the right caregivers, ensuring every need is met with empathy and understanding."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/member3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emily White"
                    android:textColor="@color/navyblue"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/member3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Support Specialist"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/member3_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emily is here to assist you with any inquiries and ensure your experience with Patient Pal is exceptional."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Why Choose Us Section -->
        <TextView
            android:id="@+id/choose_us_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Choose Us?"
            android:textColor="@color/navyblue"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/choose_us_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Personalized Care: We understand that each individual's needs are unique. Our caregivers are trained to provide tailored support.\n\n- Trusted Professionals: All caregivers undergo thorough background checks and training to ensure safety and reliability.\n\n- 24/7 Support: Our dedicated support team is available around the clock to assist you with any questions or concerns."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
